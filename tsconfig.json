{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "suppressImplicitAnyIndexErrors": true,
        "importHelpers": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "./dist",
        "sourceMap": true,
        "resolveJsonModule": true,
        "lib": [
            "es2016",
            "dom",
            "es5"
        ]
    },
    "parserOptions": {
        "sourceType": "module"
    },
    "include": [
        "src/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
